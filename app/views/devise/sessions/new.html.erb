<div class="row">

	<div class="span6 offset3">
		<h2>Sign in</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
		<%= f.input :email, :autofocus => true %>
		<%= f.input :password %>
		<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		<p> <%= f.button :submit, "Sign in", :class => 'btn-primary' %></p>

		<% end %>

		<%= render "devise/shared/links" %> <br>
		<%= link_to image_tag("loginfacebook.png", alt: ""), '/auth/facebook/' %> OR 
		<%= link_to image_tag("login-linkedin.png", alt: ""), '/auth/linkedin/' %>
	</div>
